{% include '@ec-europa/ecl-skip-links' with {
    'href': '#main-content',
    'label': 'Skip to main content'
} %}

{% include '@ec-europa/ema-headers' with header %}

{% include '@ec-europa/ema-navigation-menus' with menu %}

{% include '@ec-europa/ema-context-banners' with banner %}
<style>

/* Define accordion custom style. */
.ecl-accordion__header:active,
.ecl-accordion__header:focus,
.ecl-accordion__header:hover,
.ecl-accordion__header[aria-expanded=true] {
  background-color: #efefef;
}

.ecl-accordion__header {
  font-weight: normal;
}

.ecl-accordion__header[aria-expanded=true] .ecl-icon--up,
.ecl-accordion__header[aria-expanded=false] .ecl-icon--down {
  display: block;
}

.ecl-accordion__header[aria-expanded=false] .ecl-icon--up,
.ecl-accordion__header[aria-expanded=true] .ecl-icon--down {
  display: none;
}
</style>
<main class="ecl-u-mv-l">
  <div class="ecl-container">
  <div class="ecl-row ecl-u-mb-lg-l">
    <section class="ecl-col-lg-8">
      <h2 class="ecl-heading ecl-heading--ema-h2 ecl-u-d-inline">Zydelig</h2>
      <button class="ecl-button ecl-button--ema-small ecl-u-fs-xs ecl-u-ml-lg-xxs ecl-u-pa-xxxs"><span class="ecl-icon ecl-icon--share"></span> Share</button>
      <p class="ecl-u-mv-lg-m"><em>active substance 1 / active substance 2 / active substance 3</em></p>
      {% include '@ec-europa/ema-status-referral' with referral_status %}
    </section>
    <section class="ecl-col-lg-4">
      {% include '@ec-europa/ema-status' with status %}
      {% include '@ec-europa/ema-status' with safety %}
    </section>
   </div>

    <div class="ecl-row">
      <section class="ecl-col-lg-12">

        <p class="ecl-paragraph ecl-paragraph--ema"><strong>A transfer of the orphan designation is the procedure by which the orphan designation is transferred from the currently approved sponsor (orphan designation holder) to a new sponsor which is a different person/legal entity.</strong></p>

        {% include '@ec-europa/ema-separator' with {
          title: 'Overview',
        } %}

        <dl class="ecl-accordion" role="presentation" id="qa-60">
          <div class="ecl-u-d-flex ecl-u-justify-content-end">
            <button onclick="expandAll('#qa-60', true)" class="ecl-button ecl-button--ema-small ecl-u-mr-xs">Expand all</button>
            <button onclick="expandAll('#qa-60', false)" class="ecl-button ecl-button--ema-small">Collapse all</button>
          </div>
          <dl class="ecl-accordion" role="presentation">

            <dt role="heading">
              <button aria-controls="ecl-accordion-panel-pan2" aria-expanded="false" class="ecl-accordion__header ema-u-bg-light-grey-3" id="ecl-accordion-header-pan2" tabindex="0">
                <span class="ecl-accordion__header-icon ecl-icon ecl-icon--rounded ecl-icon--down ecl-u-bg-secondary ema-u-bg-primary ecl-u-color-white"></span>
                <span class="ecl-accordion__header-icon ecl-icon ecl-icon--rounded ecl-icon--up ecl-u-bg-secondary ema-u-bg-primary ecl-u-color-white"></span> Question 1      </button>
            </dt>
            <dd aria-hidden="true" aria-labelledby="ecl-accordion-header-pan2" class="ecl-accordion__panel" id="ecl-accordion-panel-pan2" role="region">
                  <div class="ecl-editor ecl-u-fs-m first last"><p>Answer 1</p></div>
            </dd>
          </dl>
        </dl>

        {% include '@ec-europa/ema-separator' with {
          icon: 'related-documents',
          modifier: 'secondary',
          title: 'Related documents',
        } %}

        {% include '@ec-europa/ema-listings' with items %}

        {% include '@ec-europa/ema-separator' with {
          icon: 'related-links',
          modifier: 'secondary',
          title: 'Related links',
        } %}

        <ul class="ecl-list ecl-list--unstyled ema-listings">
          <li>
            <a class="ecl-link--ema-default" href="#">
              Guideline on the format and content of applications for designation as orphan medicinal products and on the transfer of designation from one sponsor to another
            </a>
          </li>
        </ul>

        <div class="ecl-u-mr-md-l ecl-u-mv-l">
          {% include '@ec-europa/ema-rating-form' with ratingForm %}
        </div>
      </section>
    </div>
  </div>
</main>

{% include '@ec-europa/ema-footers' with footer %}
