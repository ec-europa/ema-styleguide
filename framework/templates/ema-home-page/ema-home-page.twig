{% include '@ec-europa/ecl-skip-links' with {
    'href': '#main-content',
    'label': 'Skip to main content'
} %}

{% include '@ec-europa/ema-headers' with header %}

{% include '@ec-europa/ema-navigation-menus' with menu %}


<main class="ecl-u-mv-l">
  <div class="ecl-container">

  <div class="ecl-row">
    <section class="ecl-col-lg-12">
    {% include '@ec-europa/ema-content-slider' with slider %}
    </section>
  </div>

  <div class="ecl-row ecl-u-pt-m">
    <section class="ecl-col-lg-4 ecl-u-pa-s">
    {% embed '@ec-europa/ecl-forms-forms'  with { 'extra_class':'ecl-u-pa-s ema-card'} only %}
        {% block form %}
          {% embed '@ec-europa/ecl-forms-fieldsets'  with {} only %}
            {% block fieldset %}
              <div class="ema-card-title">Search for medicines</div>
              <div class="ema-card-content">Search our database of medicines - including human medicines, veterinary medicines and herbal medicines.</div>
              {% embed '@ec-europa/ecl-forms-form-groups' %}
                {% block form_group %}
                  {% include '@ec-europa/ecl-forms-text-inputs' with {
                    'id' : 'field-ID-1',
                    'name': 'field-name-1',
                    'type': 'text',
                    'extraClass': 'ecl-text-input--ema',
                    'extraAttributes': [
                      { 'name': 'placeholder', 'value': 'Medicine name, active substance...' }
                    ]
                  } only %}
                {% endblock %}
              {% endembed %}

              {% include '@ec-europa/ecl-buttons' with {
                'modifier': 'primary',
                'label': 'Search',
                'extra_classes': 'ecl-button--ema-primary ecl-u-mt-s ecl-u-f-r',
                'extra_attributes': [
                  { 'name': 'value', 'value': 'search'},
                  { 'name': 'type', 'value': 'submit'}
                ]
              } only %}
            {% endblock %}
          {% endembed %}
        {% endblock %}
      {% endembed %}

    </section>
    <section class="ecl-col-lg-4 ecl-u-pa-s">
    {% include '@ec-europa/ema-card' with {
        title: "What's new",
        extra_class:'ecl-u-pb-m',
        content:'Find all the latest news and updates published on this website in one place.',
    } only %}
    </section>
    <section class="ecl-col-lg-4 ecl-u-pa-s">
    {% include '@ec-europa/ema-card' with {
        title: "Ask EMA",
        content:'Use our online form to ask us a question or request access to unpublished documents.',
    } only %}
    </section>
  </div>

  <div class="ecl-row">
    <section class="ecl-col-lg-12">

    {% include '@ec-europa/ema-separator' with {
      title: 'News and medicinal product announcements',
      extra_classes: 'ecl-u-pt-m',
    } only %}

    {% include '@ec-europa/ecl-listings' with {
      variant: 'two-columns',
      items: items_news,
    } only %}
    </section>
  </div>

  <div class="ecl-row">
    <section class="ecl-col-lg-4">
      {% include '@ec-europa/ema-separator' with {
        modifier: 'secondary',
        title: 'Key content',
      } %}

      {% include '@ec-europa/ecl-listings' with {
        items: items_key_content,
      } %}
    </section>

    <section class="ecl-col-lg-4">
      {% include '@ec-europa/ema-separator' with {
        modifier: 'secondary',
        title: 'Services & databases',
      } %}

      {% include '@ec-europa/ecl-listings' with {
        items: items_services,
      } %}
    </section>

    <section class="ecl-col-lg-4">
      {% include '@ec-europa/ema-separator' with {
        modifier: 'secondary',
        title: 'How does EMA work?',
      } %}

      {% include '@ec-europa/ecl-listings' with {
        items: items_how_ema_work,
      } %}
    </section>
</div>

<div class="ecl-row">
  <section class="ecl-col-lg-12 ecl-u-pa-s">
  {% include '@ec-europa/ema-separator' with {
    modifier: 'secondary',
    title: 'Information for',
  } %}
  </section>

  <section class="ecl-col-lg-4 ecl-u-pa-s">
  {% include '@ec-europa/ema-card' with {
      title: "Human pharmaceutical industry",
      content:'Use our online form to ask us a question or request access to unpublished documents.',
  } only %}
  </section>
  <section class="ecl-col-lg-4 ecl-u-pa-s">
  {% include '@ec-europa/ema-card' with {
      title: "Veterinary pharmaceutical industry",
      content:'Use our online form to ask us a question or request access to unpublished documents.',
  } only %}
  </section>
  <section class="ecl-col-lg-4 ecl-u-pa-s">
  {% include '@ec-europa/ema-card' with {
      title: "Human healthcare professionals",
      content:'Use our online form to ask us a question or request access to unpublished documents.',
  } only %}
  </section>
  <section class="ecl-col-lg-4 ecl-u-pa-s">
  {% include '@ec-europa/ema-card' with {
      title: "Animal health professionals",
      content:'Use our online form to ask us a question or request access to unpublished documents.',
  } only %}
  </section>
  <section class="ecl-col-lg-4 ecl-u-pa-s">
  {% include '@ec-europa/ema-card' with {
      title: "Patients and careers",
      content:'Use our online form to ask us a question or request access to unpublished documents.',
  } only %}
  </section>
  <section class="ecl-col-lg-4 ecl-u-pa-s">
  {% include '@ec-europa/ema-card' with {
      title: "Press and media",
      content:'Use our online form to ask us a question or request access to unpublished documents.',
  } only %}
  </section>
</div>

  </div>
</main>

{% include '@ec-europa/ema-footers' with footer %}
