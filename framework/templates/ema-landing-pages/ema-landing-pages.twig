{% include '@ec-europa/ecl-skip-links' with {
    'href': '#main-content',
    'label': 'Skip to main content'
} %}

{% include '@ec-europa/ema-headers' with header %}

{% include '@ec-europa/ema-navigation-menus' with menu %}



<main class="ecl-u-mv-l">
  <div class="ecl-container">


    <div class="ecl-row">
      <section class="ecl-col-lg-12">
        <h1 class="ecl-heading ecl-heading--ema-h1">Healthcare Professionals</h1>
        <p class="ecl-paragraph ecl-paragraph--ema ecl-paragraph--l">
          On this page, you will find information on the Agency’s activities that are most relevant to healthcare professionals, including news, and events. You can contribute to the Agency’s work by responding to public consultations. Learn more about how Healthcare Professionals are actively involved in the work of the Agency.
        </p>
      </section>
  </div>
  <div class="ecl-row">
    <section class="ecl-col-lg-12">

      {% include '@ec-europa/ema-separator' with {
        title: 'Featured information',
extra_classes: 'ecl-u-pv-l',
      } %}

        {% include '@ec-europa/ecl-listings' with {
          variant: 'two-columns',
          items: items_featured,
        } %}

    </div>

    <div class="ecl-row">
      <section class="ecl-col-lg-12">

        {% include '@ec-europa/ema-separator' with {
          extra_classes: 'ecl-u-pv-l',
          title: 'Latest news for healthcare professionals',
        } %}

        {% include '@ec-europa/ecl-listings' with {
          variant: 'two-columns',
          items: items_news,
        } %}

        {% include '@ec-europa/ema-pager' with {
          label: 'Load more news',
        } only %}

        {% include '@ec-europa/ema-separator' with {
          extra_classes: 'ecl-u-pv-l',
          title: 'Events of interest',
        } %}

        {% include '@ec-europa/ecl-listings' with {
          variant: 'two-columns',
          items: items_events,
        } %}

        {% include '@ec-europa/ema-separator' with {
          title: 'Publications',
          extra_classes: 'ecl-u-pv-l',
        } %}

        <div class="ecl-u-d-flex ecl-u-align-items-baseline ecl-u-justify-content-around">
          {% include '@ec-europa/ecl-files' with {
            variant: 'image',
            title: 'Media',
            src: 'http://www.ema.europa.eu/ema/images/SL_Working_with_HCP.jpg',
            alt: 'alt',
            caption: 'Working with healthcare professionals',
          } %}

          {% include '@ec-europa/ecl-files' with {
            variant: 'video',
            title: 'Media',
            src: 'https://www.youtube.com/embed/ShezrN2gs_8?rel=0',
            alt: 'alt',
            is_iframe: true,
            caption: 'Working for every patient in Europe',
          } %}
        </div>
      </section>
  </div>



    <div class="ecl-row ecl-u-mt-lg-m">
      <section class="ecl-col-lg-4">
        {% include '@ec-europa/ema-separator' with {
          modifier: 'secondary',
extra_classes: 'ecl-u-pv-l',
          title: 'Key content',
        } %}

        {% include '@ec-europa/ecl-listings' with {
          items: items_key_content,
        } %}
      </section>

      <section class="ecl-col-lg-4">
        {% include '@ec-europa/ema-separator' with {
          modifier: 'secondary',
extra_classes: 'ecl-u-pv-l',
          title: 'Services & databases',
        } %}

        {% include '@ec-europa/ecl-listings' with {
          items: items_services,
        } %}
      </section>

      <section class="ecl-col-lg-4">
        {% include '@ec-europa/ema-separator' with {
          modifier: 'secondary',
extra_classes: 'ecl-u-pv-l',
          title: 'How does EMA work?',
        } %}

        {% include '@ec-europa/ecl-listings' with {
          items: items_how_ema_work,
        } %}
      </section>
  </div>

  <div class="ecl-row">
    <section class="ecl-col-lg-12 ecl-u-pa-s">
    {% include '@ec-europa/ema-separator' with {
      modifier: 'secondary',
      title: 'Information for',
    } %}
    </section>


    <section class="ecl-col-lg-4 ecl-u-pa-s">
    {% include '@ec-europa/ema-card' with {
        title: "Patients and careers",
        content:'Use our online form to ask us a question or request access to unpublished documents.',
    } only %}
    </section>
    <section class="ecl-col-lg-4 ecl-u-pa-s">
    {% include '@ec-europa/ema-card' with {
        title: "Animals health professionals",
        content:'Use our online form to ask us a question or request access to unpublished documents.',
    } only %}
    </section>
    <section class="ecl-col-lg-4 ecl-u-pa-s">
    {% include '@ec-europa/ema-card' with {
        title: "Pharmaceutical industry",
        content:'Use our online form to ask us a question or request access to unpublished documents.',
    } only %}
    </section>
    <section class="ecl-col-lg-4 ecl-u-pa-s">
    {% include '@ec-europa/ema-card' with {
        title: "Media",
        content:'Use our online form to ask us a question or request access to unpublished documents.',
    } only %}
    </section>
    <section class="ecl-col-lg-4 ecl-u-pa-s">
    {% include '@ec-europa/ema-card' with {
        title: "Academia",
        content:'Use our online form to ask us a question or request access to unpublished documents.',
    } only %}
    </section>
  </div>
</main>

