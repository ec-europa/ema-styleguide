{#
  Accepts:
    -
#}

{# Internal properties #}
{% set _css_class = 'ema-content-slider' %}


{# Internal logic - Process properties #}
{% if extra_class is defined %}
  {% set _css_class = _css_class ~ ' ' ~ extra_class %}
{% endif %}

{# Print result #}
<ul class="ecl-listing {{ _css_class }}">
  {% for item in list %}
    {% set item_thumb = item|merge({ extra_attributes: [
      { name:'aria-controls', value: 'ema-content-slider__ema-list-item-highlight--' ~ loop.index },
    ] }) %}
    {% include '@ec-europa/ecl-list-items' with item_thumb %}

    {# The highlight #}
    {% set item_highlight = item|merge({ variant: 'highlight', extra_attributes: [
      { name:'id', value: 'ema-content-slider__ema-list-item-highlight--' ~ loop.index }
    ], extra_classes: 'ema-content-slider__ema-list-item-highlight' ~ (loop.index == 1 ? ' ema-content-slider__ema-list-item-highlight--active') }) %}
    {% include '@ec-europa/ecl-list-items' with item_highlight %}
  {% endfor %}
</ul>
